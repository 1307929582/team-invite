# 应用配置
DEBUG=false
SECRET_KEY=your-super-secret-key-change-this

# 数据库
DATABASE_URL=sqlite:///./data/app.db

# ChatGPT API
CHATGPT_API_BASE=https://chat.openai.com/backend-api

# Rate Limit
INVITE_DELAY_SECONDS=1.0
MAX_BATCH_SIZE=100

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# LinuxDO OAuth 配置
# 在 https://connect.linux.do 创建应用获取
LINUXDO_CLIENT_ID=your-client-id
LINUXDO_CLIENT_SECRET=your-client-secret
LINUXDO_REDIRECT_URI=http://localhost:5173/apply
